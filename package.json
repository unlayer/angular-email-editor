    "@angular/platform-browser-dynamic": "^18.0.4",
    "@angular/router": "^18.0.4",
    "core-js": "^3.37.1",
    "rxjs": "~7.8.1",
    "zone.js": "~0.14.7"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.5",
    "@angular/cli": "^18.0.5",
    "@angular/compiler-cli": "^18.0.4",
    "@angular/language-service": "^18.0.4",
    "@types/node": "~20.14.9",
    "@types/jasmine": "~5.1.4",
    "@types/jasminewd2": "~2.0.13",
