    "karma-jasmine-html-reporter": "^2.1.0",
    "ng-packagr": "^18.1.0",
    "protractor": "~7.0.0",
    "ts-node": "~10.9.2",
    "tslib": "^2.6.3",
    "tslint": "~5.20.1",
    "typescript": "^5.5.3"
  }
